<?xml version="1.0" encoding="utf-8"?>
<layout>

  <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
      android:id="@+id/transition_3d"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="16dp"
      android:text="transition_3d"
      app:layout_constraintBottom_toTopOf="@+id/transition_view"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <Button
      android:id="@+id/transition_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="16dp"
      android:text="transition_view"
      app:layout_constraintBottom_toTopOf="@+id/transition_argumented_image"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/transition_3d" />

    <Button
      android:id="@+id/transition_argumented_image"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="16dp"
      android:text="transition_argumented_image"
      app:layout_constraintBottom_toTopOf="@+id/transition_cloud_anchor"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/transition_view" />

    <Button
      android:id="@+id/transition_cloud_anchor"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="16dp"
      android:text="transition_cloud_anchor"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/transition_argumented_image" />

  </android.support.constraint.ConstraintLayout>
</layout>
